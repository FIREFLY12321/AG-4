{
	"dependencies": {
		"@actions/core": "^1.11.1",
		"@actions/github": "^6.0.1",
		"axios": "^1.11.0",
		"yaml": "^2.8.1"
	},
	"scripts": {
		"watch": "ncc build src/index.js --watch --license licenses.txt",
		"build": "bun i && ncc build src/index.js --license licenses.txt",
		"test": "node --test tests",
		"test:unit": "node --test tests/unit",
		"test:unit:ci": "node -e \"require('node:fs').mkdirSync('reports/junit', { recursive: true });\" && node --test --test-reporter=junit --test-reporter-destination=reports/junit/unit-tests.xml tests/unit",
		"test:integration": "node --test tests/integration",
		"test:integration:ci": "node -e \"require('node:fs').mkdirSync('reports/junit', { recursive: true });\" && node --test --test-reporter=junit --test-reporter-destination=reports/junit/integration-tests.xml tests/integration",
		"test:coverage": "node --test --experimental-test-coverage tests"
	},
	"devDependencies": {
		"@vercel/ncc": "^0.38.3"
	}
}
